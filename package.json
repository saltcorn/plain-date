{
  "name": "@saltcorn/plain-date",
  "version": "0.2.2",
  "description": "PlainDate: Date without time and timezone, drop-in compatible with Date",
  "homepage": "https://github.com/saltcorn/plain-date",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saltcorn/plain-date.git"
  },
  "scripts": {
    "test": "jest",
    "tsc": "tsc -p tsconfig.json",
    "clean": "echo 'No TypeScript build'",
    "build": "esbuild index.js --bundle --platform=node --format=cjs --outfile=dist/cjs/index.js && esbuild index.js --bundle --platform=node --format=esm --outfile=dist/esm/index.js && node scripts/writeEsmPackage.js",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "esbuild": "^0.25.9",
    "jest": "29.7.0"
  },
  "author": "Tom Nielsen",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/plugin_packages/",
      "/plugins_folder/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/plugin_packages/",
      "/plugins_folder/"
    ]
  },
  "type": "commonjs",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**/*"
  ]
}
